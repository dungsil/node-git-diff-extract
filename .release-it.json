{
  "git": {
    "tag": true,
    "tagArgs": ["--sign"],
    "requireBranch": "main",
    "tagName": "v${version}",
    "commitMessage": "chore(release): v${version}"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}"
  },
  "@release-it/conventional-changelog": {
    "preset": "conventionalcommits",
    "infile": "CHANGELOG.md"
  }
}
